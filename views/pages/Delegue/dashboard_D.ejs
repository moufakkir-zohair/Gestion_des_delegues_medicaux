<%- include('header'); -%>

<main class="app-content">
   <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header" style="margin: 12px 0 20px;">
              <i class="app-menu__icon fa fa-dashboard"></i>Tableau de bord
            </h3>
            <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
             <li class="breadcrumb-item"><i class="fa fa-home"></i> <a href="/dashboard_D"> Acceuil</a></li>
              <li class="breadcrumb-item active" aria-current="page"><i class="app-menu__icon fa fa-dashboard"></i> Tableau de bord</li>
            </ol>
          </nav>
          </div>
        </div>

        
      <div class="row">
        <div class="col-md-6 col-lg-3">
          <div class="widget-small primary coloured-icon"><i class="icon fa fa-plane fa-3x"></i>
            <div class="info">
              <h4>Voyage</h4>
              <p><b><%= NbreVoyage[0].Nbre_Voyage %></b></p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3">
          <div class="widget-small info coloured-icon"><i class="icon fa fa-book fa-3x"></i>
            <div class="info">
              <h4>Rapport</h4>
              <p><b><%= NbreRapport[0].Nbre_Rapport %></b></p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3">
          <div class="widget-small warning coloured-icon"><i class="icon fa fa-list-alt fa-3x"></i>
            <div class="info">
              <h4>Commande</h4>
              <p><b><%= NbreCommande[0].Nbre_Commande %></b></p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3">
          <div class="widget-small danger coloured-icon"><i class="icon fa fa-calendar fa-3x"></i>
            <div class="info">
              <h4>Rendez_vous</h4>
              <p><b><%= NbreRendez[0].Nbre_Rendez %></b></p>
            </div>
          </div>
        </div>
      </div>




      


    





      <div class="row">
        



       <% if (NbreRapport[0].Nbre_Rapport>0){%>
       <div class="col-md-6">
          <div class="tile">
            <h3 class="tile-title" style="color: blue;">
                <% if (NbreRapport[0].Nbre_Rapport>1){%>
                            Les <%= NbreRapport[0].Nbre_Rapport %> derniers Rapport 
               <% }else{ %> 
               Le dernier Rapport
              
                 <% } %> 
                
            </h3>
            <table class="table table-striped">
              <thead>
                <tr>
                   <th><i class="fa fa-question-circle" aria-hidden="true"></i> Sujet</th>
                  <th><i class="fa fa-book" aria-hidden="true"></i> Rapport</th>
                </tr>
              </thead>
              <tbody>
               <% for (R of Rapport) {%>
               <tr>
               <td><%= R.Sujet %></td>
               <td> <a href="./static/<%= R.path %>" ><button class="btn btn-info" type="button" style="padding-left: 4px;padding-right: 4px;"><i class="fa fa-download" aria-hidden="true"></i>Télécharger</button></a></td>
               </tr>
               <% } %>
              </tbody>
            </table>
          </div>
        </div>
       
       <%}%>


        <% if (NbreCommande[0].Nbre_Commande>0){%>
        <div class="col-md-6">
          <div class="tile">
            
              <h3 class="tile-title" style="color: blue;">
                <% if (NbreCommande[0].Nbre_Commande>1){%>
                          les dernières 2 commandes
               <% }else { %> 
                la dernière commande
                <% } %>
            </h3>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th><i class="fa fa-calendar-o" aria-hidden="true"></i> Date</th>
                  <th><i class="fa fa-list-alt" aria-hidden="true"></i> Commande</th>
                </tr>
              </thead>
              <tbody>
               <% for (F of FicheCommande) {%>
               <tr>
               <td><%= F.date %></td>
               <td> <a href="./static/<%= F.path %>" ><button class="btn btn-info" type="button" style="padding-left: 4px;padding-right: 4px;"><i class="fa fa-download" aria-hidden="true"></i>Télécharger</button></a></td>
               </tr>
               <% } %>
              </tbody>
            </table>
          </div>
        </div>
       

       <%}%>
      </div>

















</main>
  
      
      
</body>

 
</html>














